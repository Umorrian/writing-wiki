package templates

import "arnesteen.de/writing-wiki/sqlite_gen"

templ TArticle(article sqlite_gen.Article) {
  <h3>{article.Name}</h3>
  <p>{article.Content}</p>
}

templ TArticlesList(articles []sqlite_gen.Article) {
  <ul>
  for _, article := range articles {
    <li><a href={templ.SafeURL("http://localhost:8080/articles/"+article.Name) }>{article.Name}</a></li>
  }
  </ul>
}
